generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prompt {
  id          String     @id @default(uuid())
  effect      String     // Effect/title description
  description String     // Detailed description
  prompt      String     // The actual prompt content
  source      String     // Source URL
  imageUrl    String?    // Primary image URL (legacy field)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  categoryId  String?    // Foreign key to Category
  category    Category?  @relation(fields: [categoryId], references: [id])
  modelTags   ModelTag[] @relation("ModelTagToPrompt")
  tags        Tag[]      @relation("PromptToTag")
  images      Image[]    // Related images stored in R2
}

model Tag {
  id      String   @id @default(uuid())
  name    String   @unique
  prompts Prompt[] @relation("PromptToTag")
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  prompts   Prompt[]
}

model ModelTag {
  id        String   @id @default(uuid())
  name      String   @unique
  icon      String?
  color     String?
  type      String?
  createdAt DateTime @default(now())
  prompts   Prompt[] @relation("ModelTagToPrompt")
}

model Image {
  id          String   @id @default(uuid())
  key         String   @unique    // R2 storage key (e.g., images/xxx.jpg)
  originalUrl String?             // Original URL before migration
  url         String              // Current access URL
  fileName    String?             // Original filename
  contentType String?             // MIME type
  size        Int?                // File size in bytes
  promptId    String?             // Foreign key to Prompt (optional)
  prompt      Prompt?  @relation(fields: [promptId], references: [id], onDelete: SetNull)
  status      String   @default("active")  // Status: active, deleted, pending
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([promptId])
  @@index([status])
}
