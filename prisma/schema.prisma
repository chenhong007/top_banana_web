generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prompt {
  id          String     @id @default(uuid())
  effect      String
  description String
  prompt      String
  source      String
  imageUrl    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  categoryId  String?
  category    Category?  @relation(fields: [categoryId], references: [id])
  modelTags   ModelTag[] @relation("ModelTagToPrompt")
  tags        Tag[]      @relation("PromptToTag")
}

model Tag {
  id      String   @id @default(uuid())
  name    String   @unique
  prompts Prompt[] @relation("PromptToTag")
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  prompts   Prompt[]
}

model ModelTag {
  id        String   @id @default(uuid())
  name      String   @unique
  icon      String?
  color     String?
  type      String?
  createdAt DateTime @default(now())
  prompts   Prompt[] @relation("ModelTagToPrompt")
}

model Image {
  id          String   @id @default(uuid())
  key         String   @unique
  originalUrl String?
  url         String
  fileName    String?
  contentType String?
  size        Int?
  promptId    String?
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([promptId])
  @@index([status])
}
